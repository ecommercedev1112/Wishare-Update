<div class="product-media-wih-text{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--fade-in{% endif %}">
    {% for media in product.metafields.custom.media_with_text_media.value %}
        {% assign header = product.metafields.custom.media_with_text_header.value[forloop.index0] %}
        {% assign description = product.metafields.custom.media_with_text_description.value[forloop.index0] %}
        <div class="pmwt-item">
            <div class="pmwt-text-block">
                {% if header != blank %}
                    <h2 class="custom-section-header">{{ header }}</h2>
                {% endif %}
                {% if description != blank %}
                    <div class="custom-section-text">{{ description }}</div>
                {% endif %}
            </div>
            <div class="pmwt-media-block">
                <div class="pmwt-media-inner">
                    {% assign media_type = media.media_type | strip %}
                    {% if media_type == 'video' %}
                        {% if forloop.first %}
                            <video
                                loop
                                autoplay
                                muted
                                playsinline="playsinline"
                                preload="metadata"
                            >
                                <source src="{{ media.sources[1].url }}" type="video/mp4">
                            </video>
                        {% else %}
                            <video
                                playsinline="playsinline"
                                preload="metadata"
                                loop
                                poster="{{ media.preview_image | img_url: 'large' }}"
                            >
                                <source src="{{ media.sources[1].url }}" type="video/mp4">
                                <img src="{{ media.preview_image | img_url: 'large' }}">
                            </video>
                            <span class="video-play">
                                <svg width="65" height="65" viewBox="0 0 65 65" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M32.5006 59.6141C47.2282 59.6141 59.1673 47.675 59.1673 32.9474C59.1673 18.2198 47.2282 6.28076 32.5006 6.28076C17.7731 6.28076 5.83398 18.2198 5.83398 32.9474C5.83398 47.675 17.7731 59.6141 32.5006 59.6141Z" stroke="#1E1E1E" stroke-width="5.33333" stroke-linejoin="round"/>
                                    <path d="M27.166 32.9474V23.7098L35.166 28.3286L43.166 32.9474L35.166 37.5662L27.166 42.185V32.9474Z" stroke="#1E1E1E" stroke-width="5.33333" stroke-linejoin="round"/>
                                </svg>
                            </span>
                            <span class="video-pause">
                                <!-- Uploaded to: SVG Repo, www.svgrepo.com, Generator: SVG Repo Mixer Tools -->
                                <svg fill="#000000" height="800px" width="800px" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" 
                                         viewBox="0 0 512 512" xml:space="preserve">
                                    <g>
                                        <g>
                                            <path d="M256,0C114.842,0,0,114.842,0,256s114.842,256,256,256s256-114.842,256-256S397.158,0,256,0z M256,465.455
                                                c-115.493,0-209.455-93.961-209.455-209.455S140.507,46.545,256,46.545S465.455,140.507,465.455,256S371.493,465.455,256,465.455z
                                                "/>
                                        </g>
                                    </g>
                                    <g>
                                        <g>
                                            <path d="M318.061,139.636c-12.853,0-23.273,10.42-23.273,23.273v186.182c0,12.853,10.42,23.273,23.273,23.273
                                                c12.853,0,23.273-10.42,23.273-23.273V162.909C341.333,150.056,330.913,139.636,318.061,139.636z"/>
                                        </g>
                                    </g>
                                    <g>
                                        <g>
                                            <path d="M193.939,139.636c-12.853,0-23.273,10.42-23.273,23.273v186.182c0,12.853,10.42,23.273,23.273,23.273
                                                c12.853,0,23.273-10.42,23.273-23.273V162.909C217.212,150.056,206.792,139.636,193.939,139.636z"/>
                                        </g>
                                    </g>
                                </svg>
                            </span>
                        {% endif %}
                    {% else %}
                        {{ media | image_url: width: 650 | image_tag }}
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>