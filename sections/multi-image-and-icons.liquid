<div class="multi-image-and-icons section-block-{{section.id}}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}" id="multi-image-and-icons-{{section.id}}">
    <div class="container-1770">
        <div class="miai-content">
            <div class="miai-images small-hide">
                {% for i in (1..3) %}
                    {% assign handle = 'image' | append: i %}
                    {% assign image = section.settings[handle] %}
                    {{ image | image_url: width: image.width | image_tag: class: 'miai-fiexd-image' }}
                {% endfor %}
            </div>
            <div class="miai-text-block custom-rte">
                {% if section.settings.heading != blank %}
                    <h2 class="custom-section-header text-center">{{ section.settings.heading }}</h2>
                {% endif %}
                {% if section.settings.text != blank %}
                    <div class="custom-section-text text-center">{{ section.settings.text }}</div>
                {% endif %}
                <div class="miai-icons">
                    {% for i in (1..4) %}
                        {% assign handle = 'icon' | append: i %}
                        {% assign icon = section.settings[handle] %}
                        <div class="miai-icon">
                            {{ icon }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
