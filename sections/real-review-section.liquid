                            <g>
                                <path d="M193.939,139.636c-12.853,0-23.273,10.42-23.273,23.273v186.182c0,12.853,10.42,23.273,23.273,23.273
                                    c12.853,0,23.273-10.42,23.273-23.273V162.909C217.212,150.056,206.792,139.636,193.939,139.636z"/>
                            </g>
                        </g>
                    </svg>
                </span>
            </div>
            <div class="real-review__image custom-image">
                {% for review_image in product.metafields.custom.review_image.value %}
                    {% if forloop.last %}
                        {% assign image = review_image %}
                    {% endif %}
                {% endfor %}
                {{ image | image_url: width: 450 | image_tag }}
            </div>
            <div class="real-review__text">
                <h4 class="real-review__name">{{ product.metafields.custom.review_name.value[1] }}</h4>
                {% for review_star in product.metafields.custom.review_star.value %}
                    {% if forloop.last and review_star != blank %}
                        {% assign star = review_star %}
                    {% endif %}
                {% endfor %}
                <div class="real-review__star">{{ star | image_url: width: 120 | image_tag }}</div>
                <div class="real-review__description">{{ product.metafields.custom.review_description.value[1] }}</div>
            </div>
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Real Reviews Section",
    "settings": [
        {
            "type": "text",
            "id": "header",
            "label": "Header",
            "default": "Real Reviews of Our Real Hair"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Honest feedback from those who have reclaimed their confidence.</p>"
        }
    ]
}
{% endschema %}